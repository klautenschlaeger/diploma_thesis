	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/dac.4347},
	keywords = {OFDM, WLAN, throughput, BER, IEEE 802.11n, TGn channel},
	pages = {e4347},
	file = {Patil et al_2020_IEEE 802.pdf:/home/karlo/Zotero/storage/DJZF5FHI/Patil et al_2020_IEEE 802.pdf:application/pdf;Snapshot:/home/karlo/Zotero/storage/GJ6UFJ37/dac.html:text/html},
