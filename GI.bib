	author = {Landau, Ori and Weiss, Anthony J.},
	month = apr,
	year = {2007},
	note = {ISSN: 2379-190X},
	keywords = {Throughput, OFDM, Intersymbol interference, Costs, OFDM modulation, ISI, Additive noise, Digital communication, Digital modulation, Equalizers, Gaussian noise, ICIC, MFB, Per tone equalization, Transmitters},
	pages = {III--93--III--96},
	file = {IEEE Xplore Abstract Record:/home/karlo/Zotero/storage/BCRZ5P6T/4217654.html:text/html;Landau_Weiss_2007_OFDM Guard Interval.pdf:/home/karlo/Zotero/storage/B89AEHNN/Landau_Weiss_2007_OFDM Guard Interval.pdf:application/pdf},
